<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginEnd="8dp" android:clickable="true"
        android:layout_width="125dp" android:focusable="true"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="175dp" tools:srcCompat="@tools:sample/avatars[1]"
            android:id="@+id/iv_movie_thumbnail" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_movie_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_thumbnail" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/colorWhite"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>